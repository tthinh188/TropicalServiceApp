<body>
    <div id="container">

        <div class="main">

            <div class="imageDisplay">
                <img height="100" src="@Url.Content("~/Images/Header.jpg")" />

                <nav style="background-color:#FBB917; border:none" class="navbar navbar-default">
                    <div style="background-color:#FBB917" class="container-fluid">
                        <div id="menuItem">
                            <ul class="nav navbar-nav">
                                <li class="active">@Html.ActionLink("Product", "Product", "Product")</li>
                                <li>@Html.ActionLink("Orders", "Orders", "Product")</li>
                                @if (Session["TropicalUser"] == null)
                                {
                                    <li style="position: absolute; right: 40px;">@Html.ActionLink("Login", "Login", "Login")</li>
                                }
                                else
                                {
                                    <li style="position: absolute; right: 40px;">@Html.ActionLink("Logout", "Logout", "Login")</li>
                                }

                            </ul>
                        </div>

                    </div>
                </nav>
            </div>
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
